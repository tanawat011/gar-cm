datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

generator client {
  provider = "prisma-client-js"
}

generator pothos {
  provider = "prisma-pothos-types"
}

model todo {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  active    Boolean   @default(true)
  createdAt DateTime  @default(now())
  createdBy String?
  updatedAt DateTime  @updatedAt
  updatedBy String?
  deletedAt DateTime?
  deletedBy String?
  name      String
  done      Boolean   @default(false)
  category  String?
}

model review_me {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  active    Boolean   @default(true)
  createdAt DateTime  @default(now())
  createdBy String?
  updatedAt DateTime  @updatedAt
  updatedBy String?
  deletedAt DateTime?
  deletedBy String?
  review    String
  name      String
}
